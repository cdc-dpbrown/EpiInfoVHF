<UserControl x:Class="ContactTracing.CaseView.Controls.Analysis.AgeInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:p="clr-namespace:ContactTracing.CaseView.Properties"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:own="clr-namespace:ContactTracing.CaseView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="11pt" Margin="2" Text="{x:Static p:Resources.AnalysisMedianAge}" />
        <TextBlock Grid.Row="1" Grid.Column="0" FontSize="11pt" Margin="2" Text="{x:Static p:Resources.AnalysisMeanAge}" />
        <TextBlock Grid.Row="2" Grid.Column="0" FontSize="11pt" Margin="2" Text="{x:Static p:Resources.AnalysisMinimumAge}" />
        <TextBlock Grid.Row="3" Grid.Column="0" FontSize="11pt" Margin="2" Text="{x:Static p:Resources.AnalysisMaximumAge}" />

        <TextBlock x:Name="tblockMedianAge"   Grid.Row="0" Grid.Column="1" FontWeight="Bold" FontSize="11pt" Margin="2"></TextBlock>
        <TextBlock x:Name="tblockMeanAge"     Grid.Row="1" Grid.Column="1" FontWeight="Bold" FontSize="11pt" Margin="2"></TextBlock>
        <TextBlock x:Name="tblockMinAge"      Grid.Row="2" Grid.Column="1" FontWeight="Bold" FontSize="11pt" Margin="2"></TextBlock>
        <TextBlock x:Name="tblockMaxAge"      Grid.Row="3" Grid.Column="1" FontWeight="Bold" FontSize="11pt" Margin="2"></TextBlock>

    </Grid>
</UserControl>
