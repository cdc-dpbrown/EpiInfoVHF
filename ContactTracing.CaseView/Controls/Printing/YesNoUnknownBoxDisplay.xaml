<UserControl x:Class="ContactTracing.CaseView.Controls.Printing.YesNoUnknownBoxDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:own="clr-namespace:ContactTracing.CaseView"
             xmlns:p="clr-namespace:ContactTracing.CaseView.Properties"
             mc:Ignorable="d" 
             DataContextChanged="UserControl_DataContextChanged"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="checkboxYes" Checked="checkboxYes_Checked" Grid.Column="0" Margin="0, 0, 5, 0" Content="{x:Static p:Resources.Yes}" />
        <CheckBox x:Name="checkboxNo" Checked="checkboxNo_Checked" Grid.Column="1" Margin="0, 0, 5, 0" Content="{x:Static p:Resources.No}" />
        <CheckBox x:Name="checkboxUnk" Checked="checkboxUnk_Checked" Grid.Column="2" Margin="0, 0, 5, 0" Content="{x:Static p:Resources.PrintedFormUnknown}" />
    </Grid>
</UserControl>
